@model IEnumerable<Tjzx.Official.Models.Entities.MedicalPackage>
<div>@Html.ActionLink("关于我们","About")</div>
<div>
    @foreach (var m in Model)
    {
        <div class="item">
            <h3>@m.Name</h3>
            <h4>@m.Category.Name</h4>
